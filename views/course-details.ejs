<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="/css/course-details.css">
  <link rel="stylesheet" href="/css/common.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Manrope:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <title><%= course.title %></title>
</head>

<body>
  <%- include('partials/header') %>

  <!-- Основний контейнер з двома колонками -->
  <div class="course-main-container">
    <!-- Фіолетовий фон тільки для верхньої частини -->
    <div class="course-details-container">
      <main>
        <div class="main-content">
          <article itemscope itemtype="https://schema.org/Course">
            
            <!-- Course's Title -->
            <div class="course-main-details">
              <div class="course-header">
                <span class="course-label">COURSE</span>
                <% if(course.type === 'Pro'){ %>
                  <img src="/images/Pro Icon.svg" alt="pro icon" class="pro-icon">
                <% } %>
              </div>
              
              <h2 itemprop="name" data-i18n="courseTitle"><%= course.title %></h2>
              <div class="course-icons" aria-label="Course information">
                <div class="icon-item">
                  <%- include('partials/level-icon', { level: course.level }) %>
                  <span aria-label="Skill level"><%= course.level %></span>
                </div>
                <div class="icon-item">
                  <img src="/images/course-details-images/Time.svg" alt="Time icon">
                  <span aria-label="Course duration"><%= course.duration %></span>
                </div>
                <div class="icon-item">
                  <img src="/images/course-details-images/Star.svg" alt="Star icon">
                  <span aria-label="Course rating"><%= course.rating %></span>
                </div>
                <div class="icon-item">
                  <img src="/images/course-details-images/learners.svg" alt="Learners icon">
                  <span aria-label="Number of learners"><%= course.learners %></span>
                </div>
              </div>
            </div>
            

            <!-- Course description -->
            <section class="course-description" aria-label="Course description">
              <p itemprop="description" data-i18n="courseDescription"><%= course.description %></p>
            </section>

            <!-- Career path -->
            <section class="career-path" aria-label="Career path section">
              <h3 data-i18n="careerPath">Your Career Path</h3>
              <img src="/images/course-details-images/doodle2.svg" alt="Decorative doodle">
              <p><%= course.career %></p>
            </section>
          </article>
        </div>
      </main>
    </div>

    <!-- Білий фон -->
    <div class="course-content-container">
      <!-- What you'll learn -->
       <div class="shape-white"></div>
      <section class="what-youll-learn" aria-label="Learning outcomes">
        <div class="container">
          <h2 data-i18n="whatYoullLearn">What you'll learn</h2>
          <ul>
            <% course.learn.forEach(l => { %>
              <li><%= l %></li>
            <% }) %>
          </ul>
        </div>
      </section>

      <!-- Who is this course for -->
      <section class="who-is-this-course-for" aria-label="Target audience">
        <div class="container">
          <h2 data-i18n="whoIsThisFor">Who is this course for?</h2>
          <ul>
            <% course.for.forEach(f => { %>
              <li><%= f %></li>
            <% }) %>
          </ul>
        </div>
      </section>

      <!-- Curriculum -->
      <section class="curriculum" aria-label="Course curriculum">
        <div class="container">
          <h2 data-i18n="curriculum">Curriculum</h2>
          <ul>
            <% course.modules.forEach(m => { %>
              <li>
                <span class="module-name"><%= m.name %></span>
                <span class="module-hours"><%= m.hours %> hours</span>
              </li>
            <% }) %>
          </ul>
        </div>
      </section>

      <!-- CTA -->
      <section class="cta">
        <div class="container">
          <p data-i18n="ctaText">Get access to the complete curriculum with your free trial</p>
          <button class="button-cta" aria-label="Start trial" data-i18n="startTrialBtn">Start 7-day free trial</button>
        </div>
      </section>

      <!-- Author -->
      <section class="author-of-course" aria-label="Course author section">
        <div class="container">
          <h2 data-i18n="courseAuthor">Author of course</h2>
          <div class="author-card">
            <figure>
              <picture>
                <source media="(max-width: 768px)"
                        srcset="/images/mobile-images/author-mobile.png" width="95" height="100">
                <img src="/images/course-details-images/author.png" 
                    alt="Author: Anna Richardson" 
                    height="171" 
                    width="152">
              </picture>
              <div class="author-info">
                <div class="author-header">
                  <p class="author-name"><strong>Anna Richardson</strong></p>
                  <p class="author-title" data-i18n="authorSubtitle">Data Scientist & Lead Instructor with 8+ Years of Experience</p>
                </div>
                <div class="author-content">
                  <p class="author-bio" data-i18n="authorBio">Dr. Anna Richardson is a passionate data scientist and educator with over eight years of experience transforming complex data into actionable insights...</p>
                  <button class="read-more-btn" aria-label="Read more about the author" data-i18n="readMore">
                    Read more 
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M4 6L8 10L12 6" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </button>
                </div>
              </div>
            </figure>
          </div>
        </div>
      </section>

      <!-- Certificate -->
      <section class="course-certificate" aria-label="Course certificate information">
        <div class="container">
          <div class="certificate-card">
            <!-- Велике зображення сертифіката -->
            <div class="certificate-image">
              <picture>
                <source media="(max-width: 768px)" 
                        srcset="/images/mobile-images/certificate-mobile.png" width="345" height="267">
                <img src="/images/course-details-images/certificate.png" 
                    alt="Course Completion Certificate" width="711" height="550">
              </picture>
            </div>
            
            <!-- Інформація під зображенням -->
            <div class="certificate-info">
              <h2 data-i18n="certificateTitle">Earn a certificate with an Academy Pro subscription</h2>
              
              <button class="button-cta" aria-label="Subscribe for certificate" data-i18n="subscribeBtn">
                Subscribe to Pro ($15/month)
              </button>
              
              <div class="benefits" aria-label="Certificate benefits list">
                <div class="benefits-column">
                  <p data-i18n="benefitRecruiter">
                    <svg class="benefit-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M16.6667 5.83325L7.50004 14.9999L3.33337 10.8333" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Get recruiter attention
                  </p>
                  <p data-i18n="benefitGlobal">
                    <svg class="benefit-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M16.6667 5.83325L7.50004 14.9999L3.33337 10.8333" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Global certification
                  </p>
                </div>
                <div class="benefits-column">
                  <p data-i18n="benefitLinkedin">
                    <svg class="benefit-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M16.6667 5.83325L7.50004 14.9999L3.33337 10.8333" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Share on LinkedIn
                  </p>
                  <p data-i18n="benefitJob">
                    <svg class="benefit-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M16.6667 5.83325L7.50004 14.9999L3.33337 10.8333" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Land a tech job
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- You might also like -->
      <section class="you-might-also-like" aria-label="Suggested courses">
        <div class="container">
          <h2 data-i18n="youMightAlsoLike">You might also like</h2>
          <div class="courses-carousel">
            <button class="nav-button prev-button" aria-label="Previous courses">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 18L9 12L15 6" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            
            <div class="courses-container">
              <% courses.slice(0, 3).forEach(c => { %>
                <article class="course-card">
                  <h3><%= c.title %></h3>
                  <div class="course-meta">
                    <div class="course-level">
                      <%- include('partials/level-icon', { level: c.level }) %>
                      <span><%= c.level %></span>
                    </div>
                    <div class="course-duration">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="8" cy="8" r="7" stroke="#5C50E1" stroke-width="2"/>
                        <path d="M8 4V8L10 10" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                      <span><%= c.duration %></span>
                    </div>
                  </div>
                  <p class="course-description"><%= c.description %></p>
                  <a href="/course/<%= c.id %>" class="see-details-link" data-i18n="seeDetails">
                    See Details 
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6 12L10 8L6 4" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                </article>
              <% }) %>
            </div>
            
            <button class="nav-button next-button" aria-label="Next courses">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 18L15 12L9 6" stroke="#5C50E1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </div>
        </div>
      </section>

  <!-- Sidebar -->
  <aside class="course-sidebar" aria-label="Course purchase options">
    <h3><%= course.title %></h3>

    <div class="course-icons" aria-label="Course summary">
      <div class="icon-item">
        <%- include('partials/level-icon', { level: course.level }) %>
        <span><%= course.level %></span>
      </div>
      <div class="icon-item">
        <img src="/images/course-details-images/Time.svg" alt="Time icon">
        <span><%= course.duration %></span>
      </div>
      <div class="icon-item">
        <img src="/images/course-details-images/Star.svg" alt="Star icon">
        <span><%= course.rating %></span>
      </div>
      <div class="icon-item">
        <img src="/images/course-details-images/learners.svg" alt="Learners icon">
        <span><%= course.learners %></span>
      </div>
    </div>

    <button aria-label="Start free trial for 7 days" data-i18n="startFreeTrial">Start 7-day free trial</button>
    <button aria-label="Subscribe to Pro plan (15 dollars for a month)" data-i18n="subscribePro">Subscribe to Pro ($15/month)</button>
    <p data-i18n="proBenefits">Get course + certificate with Pro subscription</p>
  </aside>

  <%- include('partials/footer') %>
</body>
</html>